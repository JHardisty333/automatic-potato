<article class="post">
  <div class="title">
    <a href="{{post.newsfeed_url}}" target="_blank">{{post.name}}</a>
    <span>({{post.newsfeed_url}})</span>
  </div>
  <div class="meta">
   {{post.message}} by {{post.user.username}} on
    {{post.created_at}}
    |
    <a href="/post/{{post.id}}">{{post.comments.length}} comment(s)</a>
  </div>
</article>

<form class="comment-form">
  <div>
    <textarea name="comment-body"></textarea>
  </div>

  <div>
    <button type="submit">add comment</button>
  </div>
</form>

<div class="comments">
  {{#each post.comments}}
  <section class="comment">
    <div class="meta">
      {{user.username}} on {{created_at}}
    </div>
    <div class="text">
      {{newsupdate_text}}
    </div>
  </section>
  {{/each}}
</div>