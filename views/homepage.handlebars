<ol class="post-list">
  {{#each posts as |post| }}
  <li>
    <article class="post">
      <div class="title">
        <a href="{{post.newsfeed_url}}" target="_blank">{{post.name}}</a>
        <span>({{post.newsfeed_url}})</span>
      </div>
      <div class="meta">
        {{post.message}} point(s) by {{post.user.username}} 

        <a href="/post/{{newsfeed.id}}">{{post.newsupdates.length}} comment(s)</a>
      </div>
    </article>
  </li>
  {{/each}}
</ol